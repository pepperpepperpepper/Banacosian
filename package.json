{
  "name": "ear-training-app",
  "version": "1.0.0",
  "description": "Melodic Dictation Ear Training App",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=8080 --host=localhost --quiet",
    "dev:open": "live-server --port=8080 --host=localhost --open",
    "dev:lan": "live-server --port=8080 --host=0.0.0.0 --quiet",
    "dev:open:lan": "live-server --port=8080 --host=0.0.0.0 --open",
    "build": "echo 'No build step needed for static site'",
    "serve": "python3 -m http.server 8080",
    "lint:css": "stylelint \"css/**/*.css\" \"www/staff/**/*.css\"",
    "sprites:generate": "node scripts/generate_ear_sprites.js",
    "sprites:generate:openai": "node scripts/generate_ear_sprites_openai.js",
    "sprites:generate:ear": "node scripts/generate_ear_only_sprites_openai.js",
    "sprites:vectorize": "node scripts/vectorize_sprites.js",
    "sprite:build:runner": "node scripts/vectorize_and_augment.js",
    "sprite:build:glasses": "node scripts/build_glasses_variants.js",
    "sprite:gen-glasses": "node scripts/generate_glasses_openai.js",
    "sprite:vec-glasses": "node scripts/vectorize_glasses.js",
    "sprite:overlay-glasses": "node scripts/overlay_glasses.js"
    ,"sprite:add-legs": "node scripts/add_legs.js"
  },
  "keywords": [
    "ear-training",
    "music",
    "education",
    "web-audio"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@neplex/vectorizer": "^0.0.5",
    "jimp": "^1.6.0",
    "live-server": "^1.2.2",
    "potrace": "^2.1.8",
    "sharp": "^0.34.5",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1"
  },
  "dependencies": {
    "abcjs": "^6.2.2",
    "jsdom": "^27.0.1",
    "tonal": "^4.14.2"
  }
